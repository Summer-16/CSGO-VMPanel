<%- include('Header.ejs') %>

<div class="content">
  <div class="container-fluid">
    <div class="row">

      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-<%=panelSetting.color_theme%> row">
            <div class="col-md-8">
              <h4 class="card-title" id="manageCardTitle">Sales Record</h4>
              <p class="card-category">All successfull transactions made by users to buy/renew VIP are logged here</p>
            </div>
            <div class="col-md-2">
              <div class="form-group bmd-form-group mt-0 pt-0">
                <select class="form-control" id="recordsPerPage" onchange="recordPerPageChanged()" required>
                  <option value="10" selected>10 Records/page</option>
                  <option value="15">15 Records/page</option>
                  <option value="20">20 Records/page</option>
                </select>
              </div>
            </div>
            <div class="col-md-2">
              <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end" id="paginationUL">
                </ul>
              </nav>
            </div>
          </div>
          <div class="card-body">
            <div class="table-responsive scroller" style="max-height:600px;overflow: auto;" id="style-4">
              <table class="table" id="salesrecords">
                <thead class=" text-primary">
                  <th>Order ID</th>
                  <th>Payer ID</th>
                  <th>Payer Steam ID</th>
                  <th>Payer Name</th>
                  <th>Payer Email</th>
                  <th>Product Desc.</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Sale type</th>
                  <th>Dated</th>
                </thead>
                <tbody id="salesRecordBody">
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<%- include('Footer.ejs') %>

<script src="./js/notifications.js"></script>
<script src="./js/salesRecord.js"></script>